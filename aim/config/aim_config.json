{
  "$schema": "./aim_config.schema.json",
  "version": "1.0.0",
  "registry": {
    "tools": {
      "aider": {
        "name": "Aider CLI",
        "detectCommands": [
          "aider",
          "%USERPROFILE%/.local/bin/aider.exe"
        ],
        "versionCommand": [
          "aider",
          "--version"
        ],
        "configPaths": [
          "%USERPROFILE%/.aider"
        ],
        "logPaths": [],
        "capabilities": [
          "code_generation",
          "refactoring"
        ],
        "adapterScript": "%AIM_REGISTRY_PATH%/AIM_adapters/AIM_aider.ps1",
        "pinnedVersion": "",
        "autoUpdate": false
      },
      "jules": {
        "name": "Jules CLI",
        "detectCommands": [
          "jules",
          "%APPDATA%/npm/jules.cmd"
        ],
        "versionCommand": [
          "jules",
          "--version"
        ],
        "configPaths": [
          "%USERPROFILE%/.jules"
        ],
        "logPaths": [
          "%USERPROFILE%/.jules/cache/cli.log"
        ],
        "capabilities": [
          "code_generation"
        ],
        "adapterScript": "%AIM_REGISTRY_PATH%/AIM_adapters/AIM_jules.ps1",
        "pinnedVersion": "",
        "autoUpdate": false
      },
      "claude-cli": {
        "name": "Claude CLI",
        "detectCommands": [
          "claude",
          "%USERPROFILE%/.local/bin/claude.exe"
        ],
        "versionCommand": [
          "claude",
          "--version"
        ],
        "configPaths": [
          "%USERPROFILE%/.claude"
        ],
        "logPaths": [],
        "capabilities": [
          "code_generation"
        ],
        "adapterScript": "%AIM_REGISTRY_PATH%/AIM_adapters/AIM_claude-cli.ps1",
        "pinnedVersion": "",
        "autoUpdate": false
      }
    },
    "capabilities": {
      "code_generation": {
        "primaryTool": "aider",
        "fallbacks": [
          "jules",
          "claude-cli"
        ]
      },
      "refactoring": {
        "primaryTool": "aider",
        "fallbacks": []
      }
    },
    "crossToolRulesPath": "%AIM_REGISTRY_PATH%/AIM_cross-tool/AIM_coordination-rules.json"
  },
  "environment": {
    "toolsRoot": "C:\\Tools",
    "pipxApps": [
      "aider-chat",
      "ruff",
      "black",
      "isort",
      "pylint",
      "mypy",
      "pyright",
      "pytest",
      "pre-commit"
    ],
    "npmGlobal": [
      "@anthropic-ai/claude-code",
      "@google/jules",
      "@google/generative-ai-cli",
      "eslint",
      "prettier"
    ],
    "secretsVault": "%USERPROFILE%/.aim/secrets_metadata.json",
    "centralCache": "C:\\Tools\\cache\\aim",
    "healthChecks": {
      "enabled": true,
      "requiredCommands": [
        "git",
        "python",
        "node",
        "pipx",
        "npm"
      ],
      "requiredPaths": [
        "C:\\Tools\\pipx\\bin"
      ]
    },
    "versionPins": {
      "pipx": {
        "ruff": "0.14.1",
        "black": "25.9.0",
        "pytest": "8.4.2"
      },
      "npm": {
        "@anthropic-ai/claude-code": "2.0.31",
        "eslint": "9.39.0",
        "prettier": "3.6.2"
      }
    },
    "scanner": {
      "roots": [
        "C:\\Users\\richg\\Projects"
      ],
      "cachePatterns": [
        ".ruff_cache",
        ".mypy_cache",
        ".pytest_cache",
        ".eslintcache",
        "__pycache__",
        "node_modules\\.cache"
      ],
      "minSizeKB": 100
    }
  },
  "audit": {
    "enabled": true,
    "logPath": "%AIM_REGISTRY_PATH%/AIM_audit/audit.jsonl",
    "events": [
      "tool_invoke",
      "secret_access",
      "health_check",
      "install"
    ]
  },
  "doc_id": "DOC-AIM-AIM-CONFIG-030"
}
