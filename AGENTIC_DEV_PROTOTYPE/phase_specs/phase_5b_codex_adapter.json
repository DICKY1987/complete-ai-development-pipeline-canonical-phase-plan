{
  "phase_id": "PH-5B",
  "workstream_id": "WS-TOOL-INTEGRATION",
  "phase_name": "Codex CLI Tool Adapter",
  "objective": "Build adapter that interfaces with GitHub Codex CLI, submits prompts, and validates execution",
  "dependencies": ["PH-3A"],
  "file_scope": [
    "src/adapters/codex_adapter.py",
    "tests/test_codex_adapter.py"
  ],
  "pre_flight_checks": [
    {
      "check_id": "PFC-5B-001",
      "description": "Codex CLI is installed",
      "command": "which codex",
      "expected": "exit code 0"
    },
    {
      "check_id": "PFC-5B-002",
      "description": "Prompt renderer exists",
      "command": "test -f src/prompt_renderer.py",
      "expected": "exit code 0"
    }
  ],
  "acceptance_tests": [
    {
      "test_id": "AT-5B-001",
      "description": "Can invoke Codex CLI with prompt",
      "command": "python src/adapters/codex_adapter.py --prompt test_data/sample_prompt.txt --dry-run",
      "expected": "shows Codex command without executing"
    },
    {
      "test_id": "AT-5B-002",
      "description": "Captures Codex output",
      "command": "python src/adapters/codex_adapter.py --prompt test_data/sample_prompt.txt --execute --capture-output",
      "expected": "returns Codex stdout/stderr"
    },
    {
      "test_id": "AT-5B-003",
      "description": "Detects Codex execution errors",
      "command": "python src/adapters/codex_adapter.py --prompt test_data/invalid_prompt.txt --execute",
      "expected": "exit code 1, reports Codex error"
    },
    {
      "test_id": "AT-5B-004",
      "description": "Respects Codex write mode",
      "command": "python src/adapters/codex_adapter.py --prompt test_data/sample_prompt.txt --write-mode --dry-run | grep -q 'write'",
      "expected": "exit code 0"
    },
    {
      "test_id": "AT-5B-005",
      "description": "Unit tests pass",
      "command": "pytest tests/test_codex_adapter.py -v",
      "expected": "all tests pass (>= 8 tests)"
    }
  ],
  "deliverables": [
    "src/adapters/codex_adapter.py",
    "tests/test_codex_adapter.py"
  ],
  "estimated_effort_hours": 5,
  "risk_level": "medium",
  "parallel_group": "GROUP-5",
  "notes": "Can execute in parallel with PH-5A and PH-5C (different tools)"
}
