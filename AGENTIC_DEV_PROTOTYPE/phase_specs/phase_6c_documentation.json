    {
      "test_id": "AT-6C-002",
      "description": "Architecture doc explains system design",
      "command": "test -f docs/architecture.md && grep -q 'Validation Gateway' docs/architecture.md",
      "expected": "exit code 0"
    },
    {
      "test_id": "AT-6C-003",
      "description": "Getting started guide has installation steps",
      "command": "test -f docs/getting_started.md && grep -q 'Installation' docs/getting_started.md",
      "expected": "exit code 0"
    },
    {
      "test_id": "AT-6C-004",
      "description": "API reference documents all modules",
      "command": "test -f docs/api_reference.md && grep -c 'src/' docs/api_reference.md",
