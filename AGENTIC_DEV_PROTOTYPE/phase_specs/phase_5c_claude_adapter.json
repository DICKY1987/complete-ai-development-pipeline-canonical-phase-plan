{
  "phase_id": "PH-5C",
  "workstream_id": "WS-TOOL-INTEGRATION",
  "phase_name": "Claude Code Tool Adapter",
  "objective": "Build adapter that interfaces with Claude Code CLI, submits prompts, and validates execution",
  "dependencies": ["PH-3A"],
  "file_scope": [
    "src/adapters/claude_adapter.py",
    "tests/test_claude_adapter.py"
  ],
  "pre_flight_checks": [
    {
      "check_id": "PFC-5C-001",
      "description": "Claude Code CLI is installed",
      "command": "which claude",
      "expected": "exit code 0"
    },
    {
      "check_id": "PFC-5C-002",
      "description": "Prompt renderer exists",
      "command": "test -f src/prompt_renderer.py",
      "expected": "exit code 0"
    }
  ],
  "acceptance_tests": [
    {
      "test_id": "AT-5C-001",
      "description": "Can invoke Claude Code with prompt",
      "command": "python src/adapters/claude_adapter.py --prompt test_data/sample_prompt.txt --dry-run",
      "expected": "shows Claude command without executing"
    },
    {
      "test_id": "AT-5C-002",
      "description": "Captures Claude output",
      "command": "python src/adapters/claude_adapter.py --prompt test_data/sample_prompt.txt --execute --capture-output",
      "expected": "returns Claude stdout/stderr"
    },
    {
      "test_id": "AT-5C-003",
      "description": "Detects Claude execution errors",
      "command": "python src/adapters/claude_adapter.py --prompt test_data/invalid_prompt.txt --execute",
      "expected": "exit code 1, reports Claude error"
    },
    {
      "test_id": "AT-5C-004",
      "description": "Respects Claude project context",
      "command": "python src/adapters/claude_adapter.py --prompt test_data/sample_prompt.txt --project-dir . --dry-run",
      "expected": "exit code 0"
    },
    {
      "test_id": "AT-5C-005",
      "description": "Unit tests pass",
      "command": "pytest tests/test_claude_adapter.py -v",
      "expected": "all tests pass (>= 8 tests)"
    }
  ],
  "deliverables": [
    "src/adapters/claude_adapter.py",
    "tests/test_claude_adapter.py"
  ],
  "estimated_effort_hours": 5,
  "risk_level": "medium",
  "parallel_group": "GROUP-5",
  "notes": "Can execute in parallel with PH-5A and PH-5B (different tools)"
}
