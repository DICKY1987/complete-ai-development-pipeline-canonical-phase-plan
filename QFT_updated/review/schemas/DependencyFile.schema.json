{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Workstream Dependency File",
  "type": "object",
  "required": ["dependencies"],
  "properties": {
    "dependencies": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["target", "dependsOn"],
        "properties": {
          "target": { "type": "string" },
          "dependsOn": {
            "type": "array",
            "minItems": 1,
            "items": { "type": "string" }
          }
        }
      }
    }
  }
}
