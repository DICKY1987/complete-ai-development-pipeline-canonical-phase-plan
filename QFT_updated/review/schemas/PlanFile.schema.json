{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Workstream Plan File",
  "type": "object",
  "required": ["repoPath", "workstreams"],
  "properties": {
    "repoPath": {
      "type": "string",
      "description": "Path to the target repository root"
    },
    "workstreams": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "name", "worktree", "promptFile"],
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" },
          "worktree": { "type": "string" },
          "promptFile": { "type": "string" },
          "dependsOn": {
            "type": "array",
            "items": { "type": "string" },
            "description": "List of workstream IDs that must complete before this workstream starts"
          }
        }
      }
    }
  }
}
