{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://automation.local/schemas/automation_runtime_status.schema.json",
  "title": "Automation Runtime Status",
  "description": "Runtime execution status for all automation units",
  "type": "object",
  "required": ["version", "sweep_id", "started_at", "completed_at", "units"],
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "sweep_id": {
      "type": "string",
      "pattern": "^[0-9A-Z]{26}$",
      "description": "ULID for this health sweep"
    },
    "started_at": {
      "type": "string",
      "format": "date-time"
    },
    "completed_at": {
      "type": "string",
      "format": "date-time"
    },
    "duration_seconds": {
      "type": "number",
      "minimum": 0
    },
    "environment": {
      "type": "object",
      "properties": {
        "hostname": { "type": "string" },
        "os": { "type": "string" },
        "user": { "type": "string" },
        "working_directory": { "type": "string" },
        "git_sha": { "type": "string" },
        "git_branch": { "type": "string" }
      }
    },
    "summary": {
      "type": "object",
      "required": ["total", "success", "failed", "skipped", "timeout"],
      "properties": {
        "total": { "type": "integer", "minimum": 0 },
        "success": { "type": "integer", "minimum": 0 },
        "failed": { "type": "integer", "minimum": 0 },
        "skipped": { "type": "integer", "minimum": 0 },
        "timeout": { "type": "integer", "minimum": 0 },
        "success_rate": { "type": "number", "minimum": 0, "maximum": 100 }
      }
    },
    "units": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/definitions/UnitStatus"
      }
    }
  },
  "definitions": {
    "UnitStatus": {
      "type": "object",
      "required": ["status", "last_run"],
      "properties": {
        "status": {
          "type": "string",
          "enum": ["success", "fail", "timeout", "skipped", "not_run", "running"]
        },
        "last_run": {
          "type": "string",
          "format": "date-time"
        },
        "exit_code": {
          "type": "integer"
        },
        "duration_seconds": {
          "type": "number",
          "minimum": 0
        },
        "attempt_number": {
          "type": "integer",
          "minimum": 1
        },
        "stdout_hash": {
          "type": "string",
          "pattern": "^[a-f0-9]{64}$",
          "description": "SHA-256 hash of stdout"
        },
        "stderr_hash": {
          "type": "string",
          "pattern": "^[a-f0-9]{64}$",
          "description": "SHA-256 hash of stderr"
        },
        "stdout_tail": {
          "type": "string",
          "maxLength": 2000,
          "description": "Last 2000 chars of stdout"
        },
        "stderr_tail": {
          "type": "string",
          "maxLength": 2000,
          "description": "Last 2000 chars of stderr"
        },
        "error_signature": {
          "type": "string",
          "description": "Normalized error pattern for deduplication"
        },
        "metrics": {
          "type": "object",
          "properties": {
            "memory_mb": { "type": "number" },
            "cpu_percent": { "type": "number" },
            "io_read_bytes": { "type": "integer" },
            "io_write_bytes": { "type": "integer" }
          }
        },
        "artifacts": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "path": { "type": "string" },
              "size_bytes": { "type": "integer" },
              "hash": { "type": "string" }
            }
          }
        }
      }
    }
  }
}
