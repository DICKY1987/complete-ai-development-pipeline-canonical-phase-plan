{
  "_comment": "Template: Router Basic Configuration",
  "_purpose": "Basic tool routing configuration for UET Framework",
  "_version": "1.0.0",
  "_schema": "schema/router_config.v1.json",
  "_last_updated": "2025-11-23",
  "_usage": [
    "1. Copy: cp router-basic-template.json router_config.json",
    "2. Replace {{PLACEHOLDERS}}",
    "3. Validate: python core/bootstrap/validator.py --schema schema/router_config.v1.json --file router_config.json"
  ],
  "router_id": "default-router",
  "version": "1.0.0",
  "description": "Basic tool routing configuration",
  "routes": [
    {
      "capability": "code_edit",
      "description": "Route code editing tasks",
      "tools": [
        {
          "name": "aider",
          "priority": 1,
          "conditions": {
            "languages": [
              "python",
              "javascript",
              "typescript"
            ],
            "min_version": "0.40.0"
          },
          "config": {
            "config_file": ".aider.conf.yml",
            "auto_commit": false
          }
        }
      ],
      "fallback": "manual"
    },
    {
      "capability": "code_analysis",
      "description": "Route code analysis tasks",
      "tools": [
        {
          "name": "aider",
          "priority": 1,
          "conditions": {
            "languages": [
              "python",
              "javascript"
            ]
          }
        }
      ],
      "fallback": "manual"
    },
    {
      "capability": "testing",
      "description": "Route testing tasks",
      "tools": [
        {
          "name": "pytest",
          "priority": 1,
          "conditions": {
            "languages": [
              "python"
            ]
          },
          "config": {
            "config_file": "pytest.ini",
            "args": [
              "-v",
              "--tb=short"
            ]
          }
        }
      ],
      "fallback": "skip"
    },
    {
      "capability": "linting",
      "description": "Route linting tasks",
      "tools": [
        {
          "name": "ruff",
          "priority": 1,
          "conditions": {
            "languages": [
              "python"
            ]
          },
          "config": {
            "args": [
              "check",
              "--fix"
            ]
          }
        }
      ],
      "fallback": "continue"
    }
  ],
  "global_settings": {
    "max_retries": 3,
    "timeout": 300,
    "fallback_behavior": "fail",
    "log_level": "INFO"
  },
  "resilience": {
    "circuit_breaker": {
      "enabled": true,
      "failure_threshold": 5,
      "recovery_timeout": 60
    },
    "retry_policy": {
      "max_retries": 3,
      "backoff_multiplier": 2.0,
      "initial_delay": 5
    }
  },
  "meta": {
    "created": "2025-11-23",
    "template_version": "1.0.0",
    "tags": [
      "basic",
      "router"
    ]
  },
  "_example_usage": {
    "_comment": "Example: Route a code_edit task",
    "task": {
      "capability": "code_edit",
      "language": "python"
    },
    "selected_tool": "aider",
    "reason": "Matches capability and language condition"
  },
  "doc_id": "DOC-CONFIG-ROUTER-BASIC-TEMPLATE-245"
}
