# GitHub integration (optional)
# Set ENABLE_GH_SYNC=true to enable GitHub updates via gh CLI
ENABLE_GH_SYNC=false

# Provide repository context if not running inside the repo's git clone
GITHUB_OWNER=
GITHUB_REPO=

# Optional: Personal Access Token for future REST fallback (not used by gh CLI)
GITHUB_TOKEN=

# CCPM-specific settings (override config/ccpm.yaml)
ENABLE_CCPM_SYNC=false          # Master CCPM GitHub sync flag
CCPM_MAX_PARALLEL=3             # Max parallel tasks
CCPM_WORKTREE_DIR=../epic-worktrees  # Worktree base directory
CCPM_WORKSPACE_DIR=pm/workspace # CCPM workspace location

