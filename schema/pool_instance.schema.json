{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://schema.aidevpipeline.com/pool_instance.schema.json",
  "title": "ProcessInstance",
  "description": "Schema for a single tool process instance in a process pool",
  "type": "object",
  "required": [
    "index",
    "tool_id",
    "alive"
  ],
  "properties": {
    "index": {
      "type": "integer",
      "minimum": 0,
      "description": "Instance index (0-based) within the pool"
    },
    "tool_id": {
      "type": "string",
      "pattern": "^[a-z][a-z0-9_-]*$",
      "description": "Tool identifier from AIM registry (e.g., 'aider', 'codex')"
    },
    "alive": {
      "type": "boolean",
      "description": "Whether the process is currently running"
    },
    "return_code": {
      "type": [
        "integer",
        "null"
      ],
      "description": "Process exit code (null if still running)"
    },
    "pid": {
      "type": [
        "integer",
        "null"
      ],
      "description": "Operating system process ID"
    },
    "started_at": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp when instance was spawned"
    },
    "ended_at": {
      "type": [
        "string",
        "null"
      ],
      "format": "date-time",
      "description": "ISO 8601 timestamp when instance exited (null if running)"
    }
  },
  "additionalProperties": false,
  "doc_id": "DOC-SPEC-POOL-INSTANCE-SCHEMA-040"
}
