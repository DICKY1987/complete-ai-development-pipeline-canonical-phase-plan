{
  "$id": "schema/patch_policy.v1.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PatchPolicy v1",
  "description": "Policy constraints for what patches are allowed. Can be defined at global, project, phase, or document level.",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "patch_policy_id",
    "scope",
    "constraints"
  ],
  "properties": {
    "patch_policy_id": {
      "type": "string",
      "minLength": 1,
      "description": "Unique identifier for this policy"
    },
    "scope": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "level"
      ],
      "description": "Scope where this policy applies",
      "properties": {
        "level": {
          "type": "string",
          "enum": [
            "global",
            "project",
            "phase",
            "doc"
          ],
          "description": "Level at which this policy applies"
        },
        "project_id": {
          "type": [
            "string",
            "null"
          ],
          "description": "Project ID if level is project"
        },
        "phase_id": {
          "type": [
            "string",
            "null"
          ],
          "description": "Phase ID if level is phase"
        },
        "doc_ulid": {
          "type": [
            "string",
            "null"
          ],
          "pattern": "^[0-9A-HJKMNP-TV-Z]{26}$",
          "description": "Document ULID if level is doc"
        }
      }
    },
    "constraints": {
      "type": "object",
      "additionalProperties": false,
      "description": "Patch constraints and validation rules",
      "properties": {
        "allowed_formats": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "uniqueItems": true,
          "description": "Allowed patch formats"
        },
        "patch_required": {
          "type": "boolean",
          "default": true,
          "description": "Whether patches are required (vs direct edits)"
        },
        "max_lines_changed": {
          "type": "integer",
          "minimum": 1,
          "description": "Maximum total lines changed (insertions + deletions)"
        },
        "max_files_changed": {
          "type": "integer",
          "minimum": 1,
          "description": "Maximum number of files that can be modified"
        },
        "forbid_binary_patches": {
          "type": "boolean",
          "default": true,
          "description": "Whether binary patches are forbidden"
        },
        "forbid_touching_paths": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "uniqueItems": true,
          "description": "Path patterns that must not be modified"
        },
        "require_tests_for_paths": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "uniqueItems": true,
          "description": "Path patterns that require tests when modified"
        },
        "require_issue_ref": {
          "type": "boolean",
          "default": true,
          "description": "Whether an issue reference is required"
        },
        "min_reviewers": {
          "type": "integer",
          "minimum": 0,
          "default": 1,
          "description": "Minimum number of reviewers required"
        },
        "oscillation_window": {
          "type": "integer",
          "minimum": 1,
          "description": "Number of recent patches to check for oscillation"
        },
        "oscillation_threshold": {
          "type": "integer",
          "minimum": 1,
          "description": "Number of oscillating patches before quarantine"
        }
      }
    }
  },
  "doc_id": "DOC-SPEC-PATCH-POLICY-V1-020"
}
