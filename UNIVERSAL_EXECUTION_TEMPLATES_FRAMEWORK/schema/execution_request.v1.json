{
  "$id": "schema/execution_request.v1.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ExecutionRequest v1",
  "description": "Unit of work to be routed to a tool. Contains task, constraints, and routing information.",
  "type": "object",
  "additionalProperties": false,
  "required": ["request_id", "project_id", "phase_id", "task_kind", "classification", "resource_scope", "routing"],
  "properties": {
    "request_id": {
      "type": "string",
      "pattern": "^[0-9A-HJKMNP-TV-Z]{26}$",
      "description": "Unique identifier for this request (ULID)"
    },
    "project_id": {
      "type": "string",
      "minLength": 1,
      "description": "Project this request belongs to"
    },
    "phase_id": {
      "type": "string",
      "minLength": 1,
      "description": "Phase this request executes in"
    },
    "workstream_id": {
      "type": ["string", "null"],
      "description": "Optional workstream"
    },
    "task_kind": {
      "type": "string",
      "description": "Kind of task (code_edit, code_review, analysis, etc.)"
    },
    "origin": {
      "type": "object",
      "description": "What created this request",
      "properties": {
        "created_by": {
          "type": "string"
        },
        "created_at": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "classification": {
      "type": "object",
      "description": "Task classification for routing",
      "properties": {
        "complexity": {
          "type": "string",
          "enum": ["trivial", "simple", "moderate", "complex", "expert"]
        },
        "risk_tier": {
          "type": "string"
        },
        "domain": {
          "type": "string"
        },
        "priority": {
          "type": "string",
          "enum": ["low", "normal", "high", "critical"]
        }
      }
    },
    "resource_scope": {
      "type": "object",
      "description": "Resources this request can access",
      "properties": {
        "read": {
          "type": "array",
          "items": {"type": "string"}
        },
        "write": {
          "type": "array",
          "items": {"type": "string"}
        },
        "create": {
          "type": "array",
          "items": {"type": "string"}
        },
        "forbidden": {
          "type": "array",
          "items": {"type": "string"}
        }
      }
    },
    "constraints": {
      "type": "object",
      "description": "Execution constraints",
      "properties": {
        "patch_only": {
          "type": "boolean"
        },
        "tests_must_pass": {
          "type": "boolean"
        },
        "max_lines_changed": {
          "type": "integer"
        }
      }
    },
    "prompt_spec": {
      "type": ["string", "null"],
      "pattern": "^[0-9A-HJKMNP-TV-Z]{26}$",
      "description": "Prompt instance to use"
    },
    "routing": {
      "type": "object",
      "required": ["strategy"],
      "properties": {
        "strategy": {
          "type": "string",
          "enum": ["fixed", "round_robin", "auto"]
        },
        "allowed_tools": {
          "type": "array",
          "items": {"type": "string"}
        },
        "max_attempts": {
          "type": "integer",
          "minimum": 1
        },
        "timeout_seconds": {
          "type": "integer",
          "minimum": 1
        }
      }
    },
    "telemetry": {
      "type": "object",
      "properties": {
        "correlation_id": {
          "type": "string"
        },
        "trace_flags": {
          "type": "array",
          "items": {"type": "string"}
        }
      }
    }
  }
}
