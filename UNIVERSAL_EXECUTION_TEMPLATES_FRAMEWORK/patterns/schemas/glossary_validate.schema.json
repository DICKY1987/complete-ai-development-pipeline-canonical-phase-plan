{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "glossary_validate.schema.json",
  "title": "Glossary Validate Pattern Instance",
  "description": "Schema for glossary_validate pattern instances - validates glossary structure and content",
  "type": "object",
  "required": [
    "pattern_id",
    "doc_id",
    "inputs"
  ],
  "properties": {
    "pattern_id": {
      "type": "string",
      "const": "PAT-GLOSSARY-VALIDATE-001",
      "description": "Pattern identifier for glossary validation"
    },
    "doc_id": {
      "type": "string",
      "const": "DOC-GLOSSARY-VALIDATE-001",
      "pattern": "^DOC-[A-Z0-9-]+$",
      "description": "Document ID for this pattern"
    },
    "inputs": {
      "type": "object",
      "required": [
        "project_root",
        "validation_mode"
      ],
      "properties": {
        "project_root": {
          "type": "string",
          "description": "Root directory of the project"
        },
        "validation_mode": {
          "type": "string",
          "enum": ["full", "quick", "orphans", "paths"],
          "default": "full",
          "description": "Type of validation to perform"
        },
        "fail_on_warnings": {
          "type": "boolean",
          "default": false,
          "description": "Treat warnings as errors"
        }
      }
    },
    "outputs": {
      "type": "object",
      "properties": {
        "status": {
          "type": "string",
          "enum": ["success", "failure", "warnings"],
          "description": "Validation status"
        },
        "total_terms": {
          "type": "integer",
          "description": "Total number of terms found"
        },
        "errors": {
          "type": "array",
          "items": { "type": "string" },
          "description": "List of validation errors"
        },
        "warnings": {
          "type": "array",
          "items": { "type": "string" },
          "description": "List of validation warnings"
        },
        "orphaned_terms": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Terms with no incoming links"
        },
        "quality_score": {
          "type": "number",
          "minimum": 0,
          "maximum": 100,
          "description": "Overall quality score"
        },
        "execution_duration_seconds": {
          "type": "number",
          "description": "Validation execution time"
        }
      }
    }
  }
}
