{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "AIM_audit.schema.json",
  "type": "object",
  "required": ["timestamp", "actor", "action", "input", "result"],
  "properties": {
    "timestamp": { "type": "string", "format": "date-time" },
    "actor": { "type": "string" },
    "action": { "type": "string" },
    "input": { "type": "object" },
    "before": { "type": ["object", "null"] },
    "after": { "type": ["object", "null"] },
    "result": {
      "type": "object",
      "required": ["success"],
      "properties": {
        "success": { "type": "boolean" },
        "message": { "type": "string" },
        "errorCode": { "type": ["string", "null"] }
      }
    }
  }
}

